# Auto detect text files and perform LF normalization
* text=auto

# Gradle files
*.gradle text eol=lf
gradlew text eol=lf
gradlew.bat text eol=crlf

# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Source files
*.kt text eol=lf
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Documentation
*.md text eol=lf

